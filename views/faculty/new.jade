extends ../layout

block content
  section.content-header
    h1
      | New Flight
    ol.breadcrumb
      li
        a(href='#')
          i.fa.fa-dashboard
          |  Flights
      li.active New
  //- Main content
  section.content
    form.box.box-warning(action="/faculty/flights", method="POST")
      .box-body
        .form-group
          label(for="name") Name:
          input.form-control(type="text", id="name", name="name")
        .form-group
          label(for="abbr") Abbreviation:
          input.form-control(type="text", id="abbr", name="abbr")
      .box-footer
        .form-group
          button.btn.btn-primary(type="submit") Create Course